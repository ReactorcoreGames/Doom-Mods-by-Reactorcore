// ============================================================================
// GRAPPLEZ YOINK - Options Menu Definition
// ============================================================================

AddOptionMenu "OptionsMenu"
{
    Submenu "GrappleZ Yoink Options", "GrappleZ_Yoink_Options"
}

OptionValue "GrappleZ_PullMode"
{
    0, "Smart Pull"
    1, "Always Pull Enemy"
    2, "Always Pull Player"
}

OptionValue "GrappleZ_WeightCalc"
{
    0, "By Actor Mass"
    1, "By Actor Health"
}

OptionMenu "GrappleZ_Yoink_Options"
{
    Title "GrappleZ Yoink Options"

    StaticText ""
    StaticText "Target Filtering (What Can Be Yanked)", 1
    StaticText ""

    Option "Yank to Walls/Terrain", "grapplez_yoink_walls", "OnOff"
    Option "Yank Enemies", "grapplez_yoink_enemies", "OnOff"
    Option "Yank Items (Pickups)", "grapplez_yoink_items", "OnOff"
    StaticText "  Enable to pull items toward you from range", "White"

    StaticText ""
    StaticText "Enemy Pull Behavior", 1
    StaticText ""

    Option "Pull Mode", "grapplez_pull_mode", "GrappleZ_PullMode"
    StaticText "  Smart: Light enemies to you, heavy = you to them", "White"
    StaticText "  Always Enemy: Pull all enemies toward you", "White"
    StaticText "  Always Player: Always pull yourself to target", "White"

    StaticText ""
    Option "Weight Calculation", "grapplez_weight_calculation", "GrappleZ_WeightCalc"

    StaticText ""
    StaticText "Weight Thresholds (Smart Pull Only)", 1
    StaticText ""

    Slider "Light Threshold", "grapplez_light_threshold", 100, 10000, 50, 0
    StaticText "  Below threshold = fast pull to player", "White"
    Slider "Heavy Threshold", "grapplez_heavy_threshold", 100, 10000, 50, 0
    StaticText "  Above threshold = player pulled to enemy", "White"

    StaticText ""
    StaticText "Pull Strength", 1
    StaticText ""

    Slider "Wall Pull Strength", "grapplez_wall_pull_strength", 0.1, 5.0, 0.1, 1
    Slider "Enemy Pull Strength", "grapplez_enemy_pull_strength", 0.1, 5.0, 0.1, 1
    Slider "Item Pull Strength", "grapplez_item_pull_strength", 0.1, 5.0, 0.1, 1
    StaticText "  Higher values = stronger yank impulse", "White"

    StaticText ""
    StaticText "Hook Limits", 1
    StaticText ""

    Slider "Max Range", "grapplez_max_range", 512, 8192, 128, 0
    StaticText "  Hook despawns beyond this distance", "White"
    Slider "Cooldown (seconds)", "grapplez_cooldown", 0.0, 5.0, 0.1, 1
    StaticText "  Time between hook shots", "White"

    StaticText ""
    StaticText "Usage", 1
    StaticText ""
    StaticText "Press grapple key to fire hook", "White"
    StaticText "Hook yanks targets instantly on hit", "White"
    StaticText "Bind key: Controls > Customize Controls > GrappleZ", "White"
}
